2)

#include <bits/stdc++.h>

using namespace std;

int main()
{
   int x, y;
   double x1 = 4.00, x2 = 4.50, x3 = 5.00, x4 = 2.00, x5 = 1.50, total;
   cin >> x >> y;
   if (x == 1){
       total = x1*y;
   } else if (x == 2){
       total = x2*y;
   } else if (x == 3){
       total = x3*y;
   } else if (x == 4){
       total = x4*y;
   } else if (x == 5){
       total = x5*y;
   }
    
    cout << "Total: R$" << fixed << setprecision (2) << total << endl;
 
    return 0;
}

