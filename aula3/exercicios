3)

#include <bits/stdc++.h>

using namespace std;

int main()
{
   int x;
   float y, y1 = 12.00, y2 = 17.00, y3 = 25.00, total;
   cin >> x >> y;
   if (x == 1){
       total = y1*y;
   } else if (x == 2){
       total = y2*y;
   } else if (x == 3){
       total = y3*y;
   } 
    
    cout << "Salario: R$ " << fixed << setprecision (2) << total << endl;
 

    return 0;
}
