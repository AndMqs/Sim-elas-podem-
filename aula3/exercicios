1)
#include <bits/stdc++.h>

using namespace std;

int main()
{
    
    int a, b, x, y;
    float c, w, total;
    cin >> a >> b >> c >> x >> y >> w;
    total = b * c + y * w;
    cout <<"Valor a pagar: R$ " <<fixed << setprecision (2) << total << endl; 

    return 0;
}

